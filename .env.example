# PostgreSQL database connection URL
DATABASE_URL=""

# PostgreSQL password
POSTGRES_PASSWORD=""

# PostgreSQL database name
POSTGRES_DB=""

# Docker default platform
DOCKER_DEFAULT_PLATFORM=""

# Redis connection URL
REDIS_URL=""

# Redis password
REDIS_PASSWORD=""

# Primary RPC URL 
RPC_URL=""

# List of RPC URLs for key rotation (comma-separated)
# Optional: If not provided, falls back to RPC_URL
# Example: "https://rpc1.example.com,https://rpc2.example.com"
RPC_URLS=""

# Secret key for authentication
AUTH_SECRET=""

# Port to run the API server on
PORT=3000

# Docker resource limits
SVB_DOCKER_CPU_LIMIT=4
SVB_DOCKER_MEMORY_LIMIT=8g

# Background job configuration (optional - has defaults)
# Interval in seconds for updating program status (default: 3600 = 1 hour)
PROGRAM_STATUS_UPDATE_INTERVAL_SECONDS=3600

# Batch size for program status updates (default: 100)
PROGRAM_STATUS_BATCH_SIZE=100

# Maximum concurrent RPC calls for program status updates (default: 20)
PROGRAM_STATUS_MAX_CONCURRENT=20
